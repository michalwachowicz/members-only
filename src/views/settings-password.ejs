<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Change Password | membersonly</title>
    <%- include("partials/styles") %>
  </head>
  <body>
    <%- include("partials/header") %>

    <main class="main">
      <h2 class="main__title">Change Password</h2>

      <%- include("partials/errors") %>

      <form class="form form--password" action="/settings/password" method="post">
        <div class="form-group">
          <label for="currentPassword">
            Current Password <span class="required" aria-label="required">*</span>
          </label>
          <input 
            type="password" 
            name="currentPassword" 
            required 
            aria-required="true"
          />
        </div>

        <div class="form-group">
          <label for="password">
            New Password <span class="required" aria-label="required">*</span>
          </label>
          <input 
            type="password" 
            name="password" 
            required 
            aria-required="true"
          />
        </div>

        <div class="form-group">
          <label for="confirmPassword">
            Confirm New Password <span class="required" aria-label="required">*</span>
          </label>
          <input 
            type="password" 
            name="confirmPassword" 
            required 
            aria-required="true"
          />
        </div>

        <div class="form__actions">
          <a class="btn btn--secondary" href="/settings">Cancel</a>
          <button class="btn" type="submit">Update Password</button>
        </div>
      </form>
    </main>
  </body>
</html>
