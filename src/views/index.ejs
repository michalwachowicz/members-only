        <% const type = success === "deleteMessage" ? "Message" : "Account"; %>

        <div class="success">
          <div class="success__title">âœ… <%= type %> <%= action %> successfully</div>
          <p class="success__message">Your <%= type.toLowerCase() %> has been <%= action %> successfully</p>
        </div>
      <% } %>

      <%- include("partials/messages", { showAuthor: true }) %>
    </main>
  </body>
